{
  "name": "chrt-range",
  "version": "0.0.8",
  "description": "Range component for Chrt",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "jsdelivr": "dist/chrt-range.min.js",
  "unpkg": "dist/chrt-range.min.js",
  "exports": {
    "umd": "./dist/chrt-range.min.js",
    "default": "./dist/chrt-range.esm.js"
  },
  "keywords": [
    "chrt",
    "charts",
    "range",
    "abline",
    "visualization"
  ],
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx"
    }
  },
  "scripts": {
    "test": "jest",
    "postversion": "rollup -c",
    "build": "rollup -c",
    "lint": "eslint src --fix",
    "watch": "npm-watch",
    "dev": "budo test/chrts/index.js:bundle.js --live --dir test/chrts  -- -t [ babelify --extensions .js --global true ]",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/chrt-io/chrt-range.git"
  },
  "author": "chrt",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/chrt/chrt-range/issues"
  },
  "homepage": "chrt.io",
  "dependencies": {
    "chrt-object": "^0.0.16"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/preset-env": "^7.19.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^14.0.1",
    "babel-jest": "^29.0.2",
    "babel-plugin-root-import": "^6.6.0",
    "babelify": "^10.0.0",
    "budo": "^11.8.4",
    "chrt": "0.0.153",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "jest": "^29.0.2",
    "jest-environment-jsdom": "^29.0.2",
    "npm-watch": "^0.11.0",
    "rollup": "2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "watch": "^1.0.2"
  },
  "files": [
    "dist/**/*.js",
    "src/**/*.js"
  ]
}
